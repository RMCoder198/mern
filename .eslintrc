{
  "env": {
    "browser" : true,
    "node" : true,
    "es6": true
  },
  "extends": "eslint-config-google",
  "plugins": [
    "react"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true,
      "modules": true
    },
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": ["error", { "vars": "local", "args": "after-used" }],
    "require-jsdoc": ["error", {
        "require": {
            "FunctionDeclaration": true,
            "MethodDefinition": false,
            "ClassDeclaration": false,
            "ArrowFunctionExpression": false
        }
    }]
  }
}
